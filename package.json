{
  "name": "@mkas3/eslint",
  "type": "module",
  "version": "3.1.1",
  "packageManager": "pnpm@9.8.0",
  "description": "mkas3`s ESLint config",
  "author": {
    "name": "mkas3 ðŸ“›",
    "url": "https://github.com/mkas3"
  },
  "license": "MIT",
  "homepage": "https://github.com/mkas3/eslint",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkas3/eslint"
  },
  "bugs": {
    "url": "https://github.com/mkas3/eslint/issues"
  },
  "keywords": [
    "config",
    "eslint",
    "eslint-config"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "shx rm -rf ./dist && tsup && shx rm -rf dist/index.d.cts",
    "dev": "npx @eslint/config-inspector@latest --config eslint.config.ts",
    "release": "pnpm build && bumpp && pnpm publish",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@antfu/eslint-config": "^2.27.1",
    "@eslint-react/eslint-plugin": "^1.10.0",
    "@eslint/compat": "^1.1.1",
    "@next/eslint-plugin-next": "^14.2.5",
    "eslint": "^9.9.0",
    "eslint-flat-config-utils": "^0.3.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-readable-tailwind": "^1.7.0",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "jiti": "^1.21.6"
  },
  "devDependencies": {
    "bumpp": "^9.5.2",
    "lint-staged": "^15.2.9",
    "shx": "^0.3.4",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpx lint-staged",
    "preserveUnused": true
  }
}
